// Post Service Database Schema
// Manages post data

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid())
  content   String   @db.Text
  userId    String   // References user from Auth Service (no FK - microservices)
  username  String   // Denormalized for performance
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  likes     Like[]   // Relation to likes

  @@map("posts")
  @@index([userId])
  @@index([createdAt(sort: Desc)]) // For feed ordering
}

model Like {
  id        String   @id @default(uuid())
  postId    String
  userId    String   // References user from Auth Service
  username  String   // Denormalized for performance
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("likes")
  @@unique([postId, userId]) // Prevent duplicate likes
  @@index([postId])
  @@index([userId])
}
